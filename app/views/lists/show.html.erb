<h2>Movies in this list</h2>


<%= @list.name %> 

<ul> <% @list.bookmarks.each do |bookmark| %>
  <li> <%= bookmark.movie.title %>
  <%= link_to "Delete",
  bookmark_path(bookmark),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> </li>
<% end %></ul>

<%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>
<%= link_to "Back to my lists", lists_path() %>


