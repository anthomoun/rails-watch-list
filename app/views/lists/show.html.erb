<h2>Movies in this list</h2>


<%= @list.name %> 

<ul> <% @list.bookmarks.each do |bookmark| %>
  <li> <%= bookmark.movie.title %>
  <%= link_to "Delete",
  bookmark_path(bookmark),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> </li>
<% end %></ul>

<button type="button" class="btn btn-primary"> Add a movie
<%= link_to new_list_bookmark_path(@list) %></button>
<button type="button" class="btn btn-warning">Back to my lists
<%= link_to lists_path() %></button>


